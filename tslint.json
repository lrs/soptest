{
    "extends": [
        "tslint-eslint-rules"
    ],
	"rules": {
        "no-unused-expression":   true,
        "no-duplicate-variable":  true,
        "no-unused-variable":     true,
        "deprecation":            true,
        "curly":                  true,
        "class-name":             true,
        "semicolon":              true,
        "triple-equals":          true,
        "restrict-plus-operands": true,
        "indent":                 [true, "spaces", 4],
        "ter-indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "ter-max-len": [
            "warn",
            {
                "code":     120,
                "comments": 120,
                "tabWidth": 4
            }
        ],
        "whitespace": [
            true,
            "check-operator",
            "check-separator",
            "check-module"
        ],
        "max-line-length":        [true, 120]
	}
}
