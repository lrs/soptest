{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console":     "off",
        "no-undef":       1,
        "no-unused-vars": "error",
        "indent":         [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "space-infix-ops": "error",
        "semi":            ["error", "always"],
        "max-len":         ["warn", {
            "code":     120,
            "tabWidth": 4
        }]
    },
    "env": {
        "es6":     true,
        "amd":     true,
        "browser": true,
        "jest":    true,
        "node":    true
    }
}
